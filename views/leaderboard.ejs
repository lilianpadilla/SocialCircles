<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Leaderboard</title>
        <link rel="stylesheet" href="/stylesheets/leaderboard.css">

    </head>
    <body>
        <nav class="navbar">
            <p>Social Circles</p>
            <!-- Use the name of the page you came from to go back-->
            <a href="<%= backHref %>">
                <button class="back-btn"><%= backLabel %></button>
            </a>
        </nav>
        
        <div class="leaderboard">
            <h1>Leaderboard</h1>
            <% leaderboard.forEach(entry => { %>
                <div class="entry">
                <div class="rank"><%= entry.icon || entry.rank %></div>
                <div class="user-icon"></div>
                <div class="name"><%= entry.name %> â€” <%= entry.score %> pts</div>
              </div>
            <% }); %>
        </div>  
    </body>
</html>